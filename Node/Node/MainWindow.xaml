        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="245" Margin="10,19,0,0" VerticalAlignment="Top" Width="497">
            <TabItem Header="Dashboard">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Connected Nodes">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Logs">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="28*"/>
                        <ColumnDefinition Width="459*"/>
                    </Grid.ColumnDefinitions>
                    <ListBox Name="Logs" HorizontalAlignment="Left" Height="165" Margin="19,20,0,0" VerticalAlignment="Top" Width="432" Grid.ColumnSpan="2"/>
                </Grid>
            </TabItem>
            <TabItem Header="Blocks">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>

        </TabControl>
        <Button Content="Button" Margin="418,274,10,0" Click="Button_Click_2"/>
    </Grid>
</Window>
